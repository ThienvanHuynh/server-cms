extends ./layout.pug
block content

    a.btn.btn-danger.mt-3(href="/users/create" role='button') Create
    br
    table.table.mt-3
        thead
            tr
            th(scope='col') #
            th(scope='col') Tên
            th(scope='col') Số điện thoại
            th(scope='col') Chức năng
        tbody
            each user,index in users
                tr
                th(scope='row')= index+1
                td= user.name
                td= user.id
                td 
                    a.btn.btn-primary(href='/users/' + user.id role='button') View
    

