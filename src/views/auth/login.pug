html
    head
        title My Site - NodeJS
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        link(rel='stylesheet' href='../styles/index.css')
    body
        .images-cover-login
            form.form-custom.center(method="POST", href="/auth/login")
                .form-signin
                    h1.h3.mb-3.font-weight-normal.text-center.title Login
                    if errors
                        each error in errors
                            .alert.alert-danger=error
                    br
                    label.sr-only(for='inputEmail') Email address
                    input#inputEmail.form-control.input-custom(type='email',name='email' placeholder='Email address', required='', autofocus='')
                    br
                    label.sr-only(for='inputPassword') Password
                    input#inputPassword.form-control.input-custom(type='password', name='password' placeholder='Password', required='')
                    br
                    //- .checkbox.mb-3
                    //-     label
                    //-     input(type='checkbox', value='remember-me')
                    //-     |  Remember me
                    button.btn.btn-lg.btn-tranfarent.center.btn-block(type='submit') Login
                    p.mt-3.text-center Don't have an account? 
                        a(href='/auth/register') Sign up
                    a.center(href='/' role='button') Home
                    p.mt-5.mb-3.text-muted.text-center Coppy right @hvt
