extends ./header.pug
block content
    .container
        .row.mt-3
            .col.d-flex.justify-content-start
                a.btn.btn-danger.btn-default.center(href="/users/create" role='button') Create
            .col.d-flex.justify-content-end
                form.form-inline.my-2.my-lg-0(action="/users/search", method="GET")
                    input.form-control.mr-sm-2(type="text" name="name", placeholder='Search', aria-label='Search')
                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
        br
        if users.length
            table.table.mt-3.table-bordered
                thead
                    tr
                    th(scope='col') #
                    th(scope='col') Tên
                    th(scope='col') Email
                    th(scope='col') Số điện thoại
                    th.center(scope='col') Chức năng
                tbody
                
                    each user,index in users
                        tr
                        th(scope='row')= index+1
                        td= user.name
                        td= user.email
                        td= user.phone
                        td.center
                            a.btn.btn-primary(href='/users/view/detail/' + user.id role='button') View
                            a.btn.btn-danger.ml-3(href='/users/delete/' + user.id role='button') Delete
            if total               
                nav(aria-label='Page navigation example')
                    ul.pagination
                        li.page-item
                        a.page-link(href='#') Previous
                        - var n =1
                        while  n <= total
                            li.page-item
                                a.page-link(href='#')=n++
                        a.page-link(href='#') Next
        else
                h3 Không có dữ liệu 
        

