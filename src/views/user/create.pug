extends ./header.pug
block content
    h1 Create
    form(action="/users/create", method="POST")
        .form-group
            label(for='email') Name
            input#email.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter name' name="name")
            small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
        .form-group
            label(for='phone') Phone
            input#phone.form-control(type='text' placeholder='Phone number' name="phone")
        button.btn.btn-primary(type='submit') Submit
