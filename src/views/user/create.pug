extends ./header.pug
block content
    h1 Create
    .container
        form.center(action="/users/create", method="POST")
            .form-create
                .form-group
                    label(for='name') Name
                    input#name.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter name' name="name")
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter email' name="email")
                    small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
                .form-group
                    label(for='phone') Phone
                    input#phone.form-control(type='text' placeholder='Phone number' name="phone")
                button.btn.btn-primary.center(type='submit') Submit
